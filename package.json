{
  "name": "thon-ui",
  "description": "Create fast and beautiful user interfaces easily using React",
  "version": "0.0.1",
  "main": "./index.js",
  "types": "./index.d.ts",
  "files": [
    "*"
  ],
  "license": "MIT",
  "scripts": {
    "compile": "tsc -p .",
    "build": "rm -rf dist && yarn compile && cp -R src/core dist && cp -R src/plugins dist && cp src/plugin.js dist",
    "postbuild": "gulp postBuild && cp package.json dist",
    "package": "rm *.tgz && cd dist && yarn pack && cd ../ && mv dist/*.tgz ./",
    "lint": "TIMING=1 eslint src/**/*.ts* --fix",
    "clean": "rm -rf dist",
    "format:check": "prettier --check \"**/*.{ts,tsx,md}\"",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@testing-library/react-hooks": "^8.0.1",
    "@types/jest": "^29.1.2",
    "@types/react": "^17.0.37",
    "@types/react-dom": "^17.0.11",
    "eslint": "^7.32.0",
    "eslint-config-custom": "*",
    "glob": "^8.0.3",
    "gulp": "^4.0.2",
    "gulp-remove-empty-lines": "^0.1.0",
    "gulp-uglify": "^3.0.2",
    "jest": "^29.1.2",
    "through2": "^4.0.2",
    "ts-jest": "^29.0.3",
    "tsconfig": "*",
    "typescript": "^4.5.2"
  },
  "dependencies": {
    "autoprefixer": "^10.4.12",
    "classnames": "^2.3.2",
    "postcss": "^8.4.17",
    "react-hot-toast": "^2.4.0",
    "tailwindcss": "^3.1.8"
  }
}
